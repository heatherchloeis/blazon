<% provide(:title, "#{@user.name} (@#{@user.username})") %>

<%= render 'layouts/profile_nav' %>
<div class="row">
	<!-- User profile -->
	<div class="col-md-3">
		<%= render "partials/profile_info_lrg" %>
		<%= render "partials/profile_album" %>
	</div>
	<!-- Chirps -->
	<div class="col-md-6">
		<!-- Chirps if any -->
		<% @user.chirps.each do |chirp| %>
			<div class="chirps">
				<%= render 'chirps/inline_chirp', chirp: chirp %>
			</div>
			<div class="pagination">
				<%= will_paginate @chirps, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
			</div>
		<% end %>
	</div>
	<!-- Who to follow??? -->
	<div class="col-md-3">
		<h3>Who to follow</h3>
	</div>
</div>