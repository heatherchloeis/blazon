<% provide(:title, @title) %>

<div class="profile-cover-container">
	<%= image_tag @user.cover.url, class: "profile-cover-lg" %>
</div>
<%= render 'layouts/profile_nav' %>
<div class="row">
	<!-- User profile -->
	<aside class="col-lg-3 col-4">
		<%= render "partials/profile_info_lrg" %>
		<%= render "partials/profile_album" %>
	</aside>
	<!-- Followers/Following -->
	<div class="col-lg-9 col-8">
		<h3><%= @title %></h3>
		<div class="row">
			<% @users.each do |user| %>
				<div class="profile-info-sm">
					<div class="profile-cover-sm-container">
						<%= image_tag user.cover.url, class: "profile-cover-sm" %>				
					</div>
						<%= link_to user do %>
							<%= image_tag user.avatar.url, class: "profile-pic-md" %>
						<% end %>
						<p>
							<%= link_to user.name, user, class: "profile-links-name" %><br>
							<%= link_to "@#{user.username}", user, class: "profile-links-username" %>
						</p>
						<p><%= truncate user.bio, length: 70 %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>

<ul class="pagination">
	<%= will_paginate %>
</ul>