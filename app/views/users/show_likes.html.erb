<% provide(:title, @title) %>

<div class="profile-cover-container">
	<%= image_tag @user.cover.url, class: "profile-cover-lg" %>
</div>
<%= render 'layouts/profile_nav' %>
<div class="row">
	<!-- User profile -->
	<aside class="col-lg-3 col-sm-4">
		<%= render "partials/profile_info_lrg" %>
		<%= render "partials/profile_album" %>
	</aside>
	<!-- Posts -->
	<div class="col-lg-6 col-sm-8">
		<% @posts.each do |post| %>
			<div class="users liked-posts">
				<%= render 'posts/post', post: post %>
			</div>
		<% end %>
	</div>
	<!-- Who to follow??? -->
	<%= render 'users/suggestions' %>
</div>