<% provide(:title, "Search Results") %>

<!-- Search Term -->
<div class="row search-term">
	<div class="col-xl-8 offset-xl-2">
		<h3 class="">Search Results</h3>
	</div>
</div>
<div class="row">
	<!-- Side Bar -->
	<div class="col-md-3 d-none d-md-block">
		<div class="trending">
			<h5>Trends for you</h5>
		</div>
		<div class="suggestions">
			<h5>Who to follow</h5>
		</div>
	</div>
	<!-- Search Results -->
	<div class="col-md-9">
		<h5>People</h5>
		<div class="row">
			<% @users.each do |user| %>
		    <% if user.id != current_user.id %>
		      <div class="row no-gutters profile-info-md">
			      <%= render 'partials/profile_info_sm', user: user %>
			     	<div class="col-12">
			     		<p class="padding-10"><%= user.bio %></p>
			     	</div>
		      </div>
		    <% end %>
			<% end %>
		</div>
		<h5>Latest</h5>
		<div class="row"></div>
	</div>
</div>