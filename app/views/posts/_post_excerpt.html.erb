<div id="post-<%= post.id %>" class="post-excerpt">
	<div class="row no-gutters">
		<div class="col-auto">
			<%= link_to post.user do %>
				<%= image_tag post.user.avatar.url, class: "profile-pic-sm" %>
			<% end %>
		</div>
		<div class="post-content col">
			<%= link_to post.user.name, post.user, class: "post-name" %> <%= link_to "@#{post.user.username}", post.user, class: "post-username" %><span class="post-date"> Â· <%= time_ago_in_words(post.created_at) %></span>
			<p>
				<%= markdown(post.content) %>
			</p>
			<%= image_tag post.picture.url, class: "img-fluid post-photo" if post.picture? %>
		</div>
	</div>
</div>