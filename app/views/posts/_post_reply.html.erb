<div id="post-<%= post.id %>">
	<div class="row no-gutters">
		<div class="col-auto">
			<%= link_to post.user do %>
				<%= image_tag post.user.avatar.url, class: "profile-pic-sm" %>
			<% end %>
		</div>
		<div class="post-content col">
			<%= link_to post.user.name, post.user, class: "post-name" %> <%= link_to "@#{post.user.username}", post.user, class: "post-username" %><span class="post-date"> Â· <%= time_ago_in_words(post.created_at) %></span>
			<%= render 'partials/post_menu', post: post %>
			<p class="post-context">Replying to <%= link_to "@#{Post.where(id: post.parent_id).first.user.username}", User.where(id: post.parent_id).first %></p>
			<p><%= markdown(post.content) %></p>
			<%= image_tag post.picture.url, class: "img-fluid post-photo" if post.picture? %>
			<%= render 'partials/post_footer', post: post %>
		</div>
	</div>
</div>