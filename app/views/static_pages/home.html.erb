<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<div class="user_info">
				<%= render 'shared/user_info' %>
			</div>
			<div class="stats">
				<%= render 'shared/stats' %>
			</div>
		</aside>
		<div class="col-md-8">
			<%= render 'shared/chirp_form' %>
		</div>
		<div class="col-md-8 offset-md-4">
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Canary</h1>
		<h2>Welcome!</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-lrg btn-primary" %>
	</div>
<% end %>