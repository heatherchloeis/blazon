<%= form_for(@chirp, html: { multipart: true }) do |f| %>
	<%= f.hidden_field :parent_id %>
	<%= f.hidden_field :reference_id %>
	<div class="form-group row no-gutters">
		<div class="col-auto">
			<%= gravatar_for(current_user, size: 35) %>
		</div>
		<div class="col chirp-content">
			<%= f.text_area :content, class: 'form-control form-content', placeholder: "What's happening?", rows: '3' %>
			<div class="row chirp-footer">
				<div class="col-12">
					<%= f.file_field :picture, accept: 'image/*', id: "chirpPictureUpload" %>
					<%= f.submit "Chirp", class: "btn-primary btn-round btn-no-border float-right" %>
				</div>
			</div>
		</div>
	</div>
<% end %>

<script type="text/javascript">
	$('#chirp_picture').bind('change', function() {
		var size_in_megabytes = this.files[0].size / 1024 / 1024;
		if (size_in_megabytes > 5) {
			alert('Maximum file size is 5MB');
		}
	});
</script>