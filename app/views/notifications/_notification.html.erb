<% if notification.sender.id != current_user.id %>
	<% if notification.n_type == "like" %>
		<%= link_to "#{notification.sender.username} liked your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
	<% elsif notification.n_type == "reply" %>
		<%= link_to "#{notification.sender.username} replied to your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
	<% elsif notification.n_type == "repost" %>
		<%= link_to "#{notification.sender.username} reposted your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
	<% elsif notification.n_type == "message" %>
		<%= link_to "#{notification.sender.username} sent you a message 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
	<% end %>
<% end %>