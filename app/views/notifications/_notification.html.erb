<% if notification.n_type == "like" %>
	<%= link_to "#{notification.sender.username} has liked your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
<% elsif notification.n_type == "reply" %>
	<%= link_to "#{notification.sender.username} has replied to your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
<% elsif notification.n_type == "rechirp" %>
	<%= link_to "#{notification.sender.username} has rechirped your post 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
<% elsif notification.n_type == "message" %>
	<%= link_to "#{notification.sender.username} has sent you a message 路 #{time_ago_in_words(notification.created_at)}", notification_link_through_path(notification_id: notification.id), class: "dropdown-item" %>
<% end %>