<%= form_for(@chirp, html: { multipart: true }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.hidden_field :parent_id %>
	<div class="form-group row">
		<div class="col-auto">
			<%= gravatar_for(current_user, size: 30) %>
		</div>
		<div class="col">
			<%= f.text_area :content, id: 'inlineTextArea', class: 'form-control form-control-sm', placeholder: "What's happening?", rows: '1' %>
		</div>
	</div>
<% end %>